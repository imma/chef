#!/usr/bin/env bash

function version {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  local ver_chef="$(chef-client --version 2>/dev/null | awk '{print $2}' || true)"
  local ver_berkshelf="$(berks --version 2>/dev/null || true)"
  jq -n \
    --arg chef "$ver_chef" \
    --arg berkshelf  "$ver_berkshelf" \
    '{chef: $chef, berkshelf: $berkshelf}'
}

version "$@"
